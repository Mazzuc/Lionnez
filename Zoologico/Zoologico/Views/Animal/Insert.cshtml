@model Zoologico.Models.Animal

@{
    ViewData["Title"] = "Insert";
}

<h1>Cadastrar Animal</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Insert">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeAnimal" class="control-label"></label>
                <input asp-for="NomeAnimal" class="form-control" />
                <span asp-validation-for="NomeAnimal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeEspecie" class="control-label"></label>
                <input asp-for="NomeEspecie" class="form-control" />
                <span asp-validation-for="NomeEspecie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeHabitat" class="control-label"></label>
                <input asp-for="NomeHabitat" class="form-control" />
                <span asp-validation-for="NomeHabitat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataNasc" class="control-label"></label>
                <input asp-for="DataNasc" class="form-control" />
                <span asp-validation-for="DataNasc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomePorte" class="control-label"></label>
                <input asp-for="NomePorte" class="form-control" />
                <span asp-validation-for="NomePorte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Peso" class="control-label"></label>
                <input asp-for="Peso" class="form-control" />
                <span asp-validation-for="Peso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sexo" class="control-label"></label>
                <input asp-for="Sexo" class="form-control" />
                <span asp-validation-for="Sexo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescricaoAnimal" class="control-label"></label>
                <textarea asp-for="DescricaoAnimal" class="form-control"></textarea>
                <span asp-validation-for="DescricaoAnimal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeDieta" class="control-label"></label>
                <input asp-for="NomeDieta" class="form-control" />
                <span asp-validation-for="NomeDieta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ObsProntuario" class="control-label"></label>
                <textarea asp-for="ObsProntuario" class="form-control"></textarea>
                <span asp-validation-for="ObsProntuario" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Select">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
