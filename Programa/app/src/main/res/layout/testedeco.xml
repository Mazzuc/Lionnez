<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="165dp"
    android:id="@+id/imageView"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:id="@+id/base"
        android:layout_width="300dp"
        android:layout_height="165dp"
        android:gravity="end"
        android:orientation="horizontal"
        android:padding="05dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/brgattse"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:gravity="end"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/nomeTxt"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginTop="05dp"
                android:fontFamily="@font/outifit"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <LinearLayout
                android:id="@+id/brttse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/texthorariodecuracao"
                    android:layout_width="50dp"
                    android:text="Horário Duração Dia"

                    android:layout_height="40dp"
                    android:fontFamily="@font/outifit"
                    android:textColor="@color/white"
                    android:textSize="10sp"

                    />

                <LinearLayout
                    android:id="@+id/btse"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                <TextView
                    android:id="@+id/horarioTxt"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/outifit"
                    android:gravity="end"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textSize="10sp"

                    />
                <TextView
                    android:id="@+id/duracaoTxt"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/outifit"
                    android:gravity="end"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textSize="10sp"

                    />
                    <TextView
                        android:id="@+id/diaTxt"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/outifit"
                        android:gravity="end"
                        android:textAlignment="textEnd"
                        android:textColor="@color/white"
                        android:textSize="10sp"

                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttoncard1"
                android:layout_width="70dp"
                android:layout_height="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/roud_image"
                android:gravity="center"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Informações"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="7sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
