<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/campo_toast_alert"
    tools:context=".CustonToastActivity">


    <LinearLayout
        android:id="@+id/base"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        app:backgroundTint="@null"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:gravity="center"
            android:id="@+id/iconenome"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            >

            <LinearLayout
                android:gravity="center"
                android:id="@+id/iconome"
                android:background="@drawable/icon_redondo_white"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/_photo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/icon_atention" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:id="@+id/inenome"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/textinform"
                android:textColor="#FFBC0A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="05dp"
                android:fontFamily="@font/outifit"
                android:text="INFORMAÇÃO INCOMPLETA!"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />
            <TextView
                android:id="@+id/texform"
                android:textColor="#FFBC0A"
                android:layout_width="match_parent"
                android:layout_height="05dp"

                 />

            <TextView
                android:id="@+id/texinform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="05dp"
                android:fontFamily="@font/outifit"
                android:text="Certifique-se de que todas os campos
obrigatórios foram preenchidos"
                android:textColor="@color/white"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />



        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>