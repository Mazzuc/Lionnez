<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   style="@style/FUNDO">

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="305dp"
        android:elevation="10dp"
        style="@style/FUNDOQR"
        android:orientation="vertical"
        android:paddingLeft="27dp"
        android:paddingTop="15dp"
        android:paddingRight="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-16dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:paddingRight="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="258dp"
                android:layout_height="70dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="180dp"
                android:orientation="horizontal"
                android:paddingLeft="0dp"
                android:paddingRight="40dp">

                <LinearLayout
                    style="@style/FUNDOEDITTEXT"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/imageView4"
                        style="@style/CAMPOVOLTAR"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    style="@style/FUNDO"
                    android:layout_width="20dp"
                    android:layout_height="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="40dp"
                    app:cardElevation="0dp" />

                <TextView
                    android:id="@+id/textView"
                    style="@style/TEXTDESTAQUE"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Scanear QR Code"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />

            </androidx.appcompat.widget.Toolbar>
        </LinearLayout>

        <TextView
            android:id="@+id/facalogin3"
            style="@style/TEXTCOLOR3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/outifit"
            android:justificationMode="inter_word"
            android:text="Explore o Zoológico com facilidade! Use o scanner de QR Codes para obter informações específicas sobre os animais. "
            android:textSize="14sp" />

    </LinearLayout>

    <com.journeyapps.barcodescanner.DecoratedBarcodeView
        android:id="@+id/zxing_barcode_scanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginTop="70dp"
        android:background="@color/verde"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.journeyapps.barcodescanner.DecoratedBarcodeView>

</androidx.constraintlayout.widget.ConstraintLayout>