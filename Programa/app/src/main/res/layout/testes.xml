<?xml version="1.0" encoding="utf-8"?>
<!-- item_search_result.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/pesquisa_cinza"
    android:layout_height="170dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="horizontal">


        <LinearLayout
            android:paddingLeft="25dp"
            android:paddingTop="25dp"
            android:paddingBottom="23dp"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_height="wrap_content"
        android:text="Título"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                />
            <TextView
                android:textColor="#C5C5C5"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTitle"
                android:text="Origem"/>
    <TextView
        android:textSize="13dp"
        android:textColor="@color/cinza_medio"
        android:id="@+id/textViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle"
        android:text="Descrição"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                />
            <TextView
                android:textColor="#C5C5C5"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTitle"
                android:text="Habitat"/>
            <TextView
                android:textSize="13dp"
                android:textColor="@color/cinza_medio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTitle"
                android:text="Descrição"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="end"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        >


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="20dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="3dp"
                android:background="@drawable/fundoalbum">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/back_menu_pesquisa"
                android:orientation="vertical">


            </LinearLayout>
</RelativeLayout>


    </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>
</RelativeLayout>
