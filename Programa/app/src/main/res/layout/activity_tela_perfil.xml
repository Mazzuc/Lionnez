<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    tools:context=".LoginActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/LinearVoltar"
            style="@style/FUNDOEDITTEXT"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="12dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="15dp">

            <ImageView
                android:id="@+id/imageView4"
                style="@style/CAMPOVOLTAR"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            style="@style/FUNDO"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            app:backgroundTint="@null"
            app:cardElevation="0dp">

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            style="@style/TEXTDESTAQUE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Log In"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        style="@style/FUNDO"
        android:orientation="vertical"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

    <LinearLayout
        android:id="@+id/altrhnome"
        android:gravity="center_horizontal"
        style="@style/FUNDO"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

    <ImageView
            android:id="@+id/img_photo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:elevation="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/perfil" />

        <Button
            android:id="@+id/btn_selectphoto"
            android:layout_width="155dp"
            android:elevation="5dp"
            android:layout_height="155dp"
            android:layout_marginTop="-150dp"
            app:backgroundTint="@color/transparent" />

        <LinearLayout
            android:layout_gravity="center"
            android:elevation="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="-55dp"
            android:layout_width="55dp"
            android:layout_centerInParent="true"
            android:layout_height="55dp"
            android:orientation="vertical"
            style="@style/BD_REC">

            <Button
                android:id="@+id/btn_upload"
                app:backgroundTint="#00000000"
                android:layout_width="57dp"
                android:layout_height="57dp"
                style="@style/BD_REC"/>

            <ImageView
                android:padding="15dp"
                android:layout_marginTop="-55dp"
                android:id="@+id/icone4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/ICONEEDIT" />
        </LinearLayout>
    </LinearLayout>

        <TextView
            android:id="@+id/textinform"
            style="@style/TEXTCOLORDES"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="05dp"
            android:fontFamily="@font/outifit"
            android:text="Informações Pessoais"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayo4ut"
        style="@style/FUNDO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:id="@+id/linearLa4ut"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <LinearLayout
                android:id="@+id/iconenome"
                style="@style/FUNDO"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:padding="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <ImageView
                    android:id="@+id/icn4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/ICONEPERFIL" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/textonome"
                style="@style/FUNDO"
                android:layout_width="220dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">


                <TextView
                    android:id="@+id/textinfornome"
                    style="@style/TEXTCOLOR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/outifit"
                    android:text="Seu Nome"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/nomeTextView"
                    style="@style/TEXTCOLORDES"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/outifit"
                    android:text="Exemplo nome"
                    android:textSize="15dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/altnome"
                style="@style/FUNDO"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:padding="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <ImageView
                    android:id="@+id/on4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/iconarrowcinza" />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/lineL8a4ut"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <LinearLayout
                android:id="@+id/iconeemail"
                style="@style/FUNDO"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:padding="25dp"
                android:layout_marginRight="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">


                <ImageView
                    android:id="@+id/i4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/ICONEEMAIL" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/textoemail"
                style="@style/FUNDO"
                android:layout_width="220dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <TextView
                    android:id="@+id/textinforemail"
                    style="@style/TEXTCOLOR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/outifit"
                    android:text="Endereço de E-mail"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/emailTextView"
                    style="@style/TEXTCOLORDES"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/outifit"
                    android:text="leo@gmail.com"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/altemail"
                style="@style/FUNDO"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:padding="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <ImageView
                    android:id="@+id/voltaremail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/iconarrowcinza" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/textconfig"
            style="@style/TEXTCOLORDES"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/outifit"
            android:text="Configurações"
            android:textAlignment="center"
            android:textSize="14dp"

            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/lin75eL8a4ut"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <LinearLayout
                android:id="@+id/iconemodo"
                style="@style/FUNDO"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:padding="25dp"
                android:layout_marginRight="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <ImageView
                    android:id="@+id/icon4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/SOL" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/textomodo"
                style="@style/FUNDO"
                android:layout_width="215dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">


                <TextView
                    android:id="@+id/textinformodo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/outifit"
                    style="@style/TEXTCOLORDES"
                    android:text="Modo Divertido"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/textvoltarmodo"
                    style="@style/TEXTCOLOR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/outifit"
                    android:text="Ative o modo divertido"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/altmodo"
                style="@style/FUNDO"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:padding="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <Switch
                    android:id="@+id/switch_dark_mode"
                    style="@style/TINT_SWITCH"
                    android:layout_width="50dp"
                    android:layout_marginLeft="-03dp"
                    android:layout_height="50dp"
                    android:trackTint="#808080" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/textentrar"
            style="@style/TEXTCOLORDES"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/outifit"
            android:text="Entrar"
            android:textAlignment="center"
            android:textSize="14dp"

            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linsair"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <LinearLayout
                android:id="@+id/iconesair"
                style="@style/FUNDO"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:padding="25dp"
                android:layout_marginRight="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <ImageView
                    android:id="@+id/iconexit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/ICONESAIR" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/textsair"
                style="@style/FUNDO"
                android:layout_width="220dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">


                <TextView
                    android:id="@+id/textinforconta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    style="@style/TEXTCOLORDES"
                    android:fontFamily="@font/outifit"
                    android:text="Sair"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/textvoltarconta"
                    style="@style/TEXTCOLOR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/outifit"
                    android:text="Deseja sair da sua conta?"
                    android:textSize="15dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/altsair"
                style="@style/FUNDO"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:padding="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <ImageView
                    android:id="@+id/volta"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/iconarrowcinza" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
