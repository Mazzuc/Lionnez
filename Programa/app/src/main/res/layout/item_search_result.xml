<?xml version="1.0" encoding="utf-8"?>
<!-- item_search_result.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="342dp"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/pesquisa_cinza"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="horizontal">


        <LinearLayout
            android:paddingLeft="22dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_height="wrap_content"
                android:text="Título"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                />
            <TextView
                android:textColor="#C5C5C5"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTitle"
                android:text="Origem"/>
            <TextView
                android:textSize="11dp"
                android:textColor="@color/cinza_medio"
                android:id="@+id/textViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTitle"
                android:text="Descrição"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                />
            <TextView
                android:textColor="#C5C5C5"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTitle"
                android:text="Habitat"/>
            <TextView
                android:textSize="11dp"
                android:id="@+id/textViewHabitat"
                android:textColor="@color/cinza_medio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTitle"
                android:text="Descrição"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="end"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:orientation="vertical"
            android:layout_marginLeft="1dp"
            >


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="20dp"
                >

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="3dp"
                    android:background="@drawable/fundoalbum">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/back_menu_pesquisa"
                        android:orientation="vertical">


                    </LinearLayout>
                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
