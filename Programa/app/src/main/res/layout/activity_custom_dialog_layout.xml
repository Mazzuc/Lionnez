<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/ALBUMALERT"
    tools:context=".custom_dialog_layout">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <ImageView
                style="@style/CAMPOLOGO"
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="30dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/customDialogTitle"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Tem certeza que deseja deletar a imagem?"
            style="@style/TEXTDESTAQUE"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="end"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btnCustomDialogSim"
            android:layout_width="50dp"
            android:padding="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@null"
            android:background="@color/transparent"
            style="@style/TEXTCOLORDEST"
            android:text="Sim"
             />

        <Button
            android:id="@+id/btnCustomDialogNao"
            android:layout_width="50dp"
            android:padding="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@null"
            android:background="@color/transparent"
            android:text="NÃ£o"
            style="@style/TEXTCOLORDEST" />
    </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>