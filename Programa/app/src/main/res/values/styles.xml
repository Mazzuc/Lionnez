<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EstiloStatusBarVerde" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/verde</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Adicione essa linha para remover a barra de ação -->
        <item name="windowActionBar">false</item>
        <!-- Adicione essa linha se você estiver usando a barra de ação -->
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AlertDialogCustomStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="YourAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Adicione as animações de transição -->
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

</resources>



